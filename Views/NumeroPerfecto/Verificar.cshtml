@{
}
@{
    ViewBag.Title = "Verificar número perfecto";
}

<h2>¿Es un número perfecto?</h2>

@using (Html.BeginForm("Verificar", "NumeroPerfecto", FormMethod.Post))
{
    <label>Ingresa un número:</label>
    <input type="number" name="numero" min="1" required />
    <br />
    <br />
    <input type="submit" value="Verificar" />
}

@if (ViewBag.Resultado != null)
{
    <h3>@ViewBag.Resultado</h3>
}
