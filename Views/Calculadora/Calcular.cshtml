@{
}
@{
    ViewBag.Title = "Calculadora";
}

<h2>Calculadora</h2>

@using (Html.BeginForm("Calcular", "Calculadora", FormMethod.Post))
{
    <label>Valor 1:</label>
    <input type="number" step="any" name="valor1" required />
    <br />
    <br />

    <label>Valor 2:</label>
    <input type="number" step="any" name="valor2" required />
    <br />
    <br />

    <label>Operación:</label>
    <select name="operacion">
        <option value="+">Sumar (+)</option>
        <option value="-">Restar (-)</option>
        <option value="*">Multiplicar (*)</option>
        <option value="/">Dividir (/)</option>
    </select>
    <br />
    <br />

    <input type="submit" value="Calcular" />
}

@if (ViewBag.Resultado != null)
{
    <h3>@ViewBag.Resultado</h3>
}
