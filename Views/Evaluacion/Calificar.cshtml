@{
}
@{
    ViewBag.Title = "Evaluación del estudiante";
}

<h2>Evaluación del estudiante</h2>

@using (Html.BeginForm("Calificar", "Evaluacion", FormMethod.Post))
{
    <label>Nota 1:</label>
    <input type="number" name="nota1" min="0" max="100" step="any" required />
    <br />
    <br />

    <label>Nota 2:</label>
    <input type="number" name="nota2" min="0" max="100" step="any" required />
    <br />
    <br />

    <label>Nota 3:</label>
    <input type="number" name="nota3" min="0" max="100" step="any" required />
    <br />
    <br />

    <label>Nota 4:</label>
    <input type="number" name="nota4" min="0" max="100" step="any" required />
    <br />
    <br />

    <input type="submit" value="Calcular Promedio" />
}

@if (ViewBag.Mensaje != null)
{
    <h3>@ViewBag.Mensaje</h3>
}
